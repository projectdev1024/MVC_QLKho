@model MVC_QLKHO.Models.NhanVien

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.IsDelete)

                <div class="form-group">
                    @Html.Label("MÃ NHÂN VIÊN (Tên đăng nhập)", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @if (Model == null || string.IsNullOrEmpty(Model.MaNV))
                        {
                            @Html.TextBoxFor(model => model.MaNV, new { @class = "form-control", required = "required", placeholder = "Vui lòng nhận giá trị" })
                        }
                        else
                        {
                            @Html.HiddenFor(q => q.MaNV)
                            @Html.TextBoxFor(model => model.MaNV, new { @class = "form-control", required = "required", disabled = "disabled", placeholder = "Vui lòng nhận giá trị" })
                        }
                    </div>
                </div>

                @if (Model == null || string.IsNullOrEmpty(Model.MaNV))
                {
                    <div class="form-group">
                        @Html.Label("MẬT KHẨU", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.MaNV, new { @class = "form-control", required = "required", placeholder = "Vui lòng nhận giá trị" })
                        </div>
                    </div>
                }

                <div class="form-group">
                    @Html.Label("TÊN NHÂN VIÊN", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TenNV, new { @class = "form-control", required = "required", placeholder = "Vui lòng nhận giá trị" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("PHÒNG BAN", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.PB, new { @class = "form-control", required = "required", placeholder = "Vui lòng nhận giá trị" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("CHỨC VỤ", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <select name="CV" required class="form-control">
                            <option value="QuanLy">Quản lý</option>
                            <option value="NVKiemKho">Nhân viên kiểm kho</option>
                            <option value="NVXuatNhapKho">Nhân viên xuất nhập kho</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("MÔ TẢ", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.MT, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-success" />
                        @Html.ActionLink("Quay về quản lý", "Index", new { }, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
