@model MVC_QLKHO.Models.NhomHangHoa

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.IsDelete)

                <div class="form-group">
                    @Html.Label("MÃ NHÓM HÀNG HÓA", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @if (Model == null || string.IsNullOrEmpty(Model.ID_NHH))
                        {
                            @Html.TextBoxFor(model => model.ID_NHH, new { @class = "form-control", required = "required", placeholder = "Vui lòng nhập giá trị" })
                        }
                        else
                        {
                            @Html.HiddenFor(q=>q.ID_NHH)
                            @Html.TextBoxFor(model => model.ID_NHH, new { @class = "form-control", required = "required", disabled = "disabled", placeholder = "Vui lòng nhận giá trị" })
                        }
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("TÊN NHÓM HÀNG HÓA", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TenNHH, new { @class = "form-control", required = "required", placeholder = "Vui lòng nhập giá trị" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-success" />
                        @Html.ActionLink("Quay về quản lý", "Index", new { }, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
