@model MVC_QLKHO.Models.HangHoa

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.IsDelete)

                <div class="form-group">
                    @Html.Label("MÃ HÀNG HÓA", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @if (Model != null && string.IsNullOrEmpty(Model.MaHH) == false)
                        {
                            @Html.HiddenFor(q => q.MaHH)
                            @Html.TextBoxFor(model => model.MaHH, new { @class = "form-control", required = "required", disabled = true })
                        }
                        else
                        {
                            @Html.TextBoxFor(model => model.MaHH, new { @class = "form-control", required = "required", placeholder = "Vui lòng nhập giá trị" })
                        }
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("NHÓM HÀNG HÓA", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ID_NHH", ViewBag.selectNHH as SelectList, "Chọn một giá trị", new { @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("TÊN HÀNG HÓA", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TenHH, new { @class = "form-control", required = "required", placeholder = "Vui lòng nhập giá trị" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("MÔ TẢ", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", placeholder = "Mô tả" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-success" />
                        @Html.ActionLink("Quay về quản lý", "Index", new { }, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
